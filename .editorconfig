# EditorConfig is awesome: http://EditorConfig.org
# Edited for the BBC Coding test

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all source JS files
[src/js/**.js, server/*.js]
indent_style = space
indent_size = 2

# Matches the exact file package.json
[{package.json}]
indent_style = space
indent_size = 2
